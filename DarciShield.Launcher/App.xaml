<Application x:Class="DarciShield.Launcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:UrbanChaosMapEditor.Converters;assembly=UrbanChaosMapEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- MUST match the keys used in UrbanChaosMapEditor.App.xaml -->

            <!-- Global converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <conv:CountToBoolConverter x:Key="CountToBool" />
            <conv:InvertBoolToVisibilityConverter x:Key="InvertBoolToVis" />
            <conv:PathToFileNameConverter x:Key="PathToFileName" />
            <conv:NullToBoolConverter x:Key="NullToBool" />
            <conv:FacetTypeToBrushConverter x:Key="FacetTypeToBrush" />

            <!-- Dark theme from the UrbanChaosMapEditor assembly -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UrbanChaosMapEditor;component/Themes/Dark.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
