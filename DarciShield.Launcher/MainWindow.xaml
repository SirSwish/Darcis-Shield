<Window x:Class="DarciShield.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Darci's Shield"
        Width="720" Height="980"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/Icons/app.ico"
        ResizeMode="NoResize"

        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">


    <Window.Resources>
        <!-- Basic button look for overlay "hotspots" -->
        <Style x:Key="BadgeButton" TargetType="Button">
            <Setter Property="Background" Value="#22000000"/>
            <Setter Property="BorderBrush" Value="#66FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="0">
                            <ContentPresenter
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                        TextElement.FontWeight="{TemplateBinding FontWeight}"
                        TextElement.FontSize="{TemplateBinding FontSize}"
                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#33000000"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#AAFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#55000000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <Grid MouseLeftButtonDown="Window_DragMove" Background="Transparent">
        <!-- Leather background -->
        <Image Source="/Assets/Images/Backgrounds/leather.png"
           Stretch="Fill"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"
           SnapsToDevicePixels="True"
           RenderOptions.BitmapScalingMode="HighQuality"/>

        <!-- Badge background image -->
        <Image Source="/Assets/Images/Backgrounds/shield.png"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           SnapsToDevicePixels="True"
           RenderOptions.BitmapScalingMode="HighQuality"/>

        <!-- Button overlay area -->
        <!-- Adjust Margin to move the 2x3 grid up/down to match your badge engraving/blank panels -->
        <Border HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            Padding="0" Height="192" Width="386">
            <UniformGrid Rows="3" Columns="2"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center" Height="206">
                <Button Style="{StaticResource BadgeButton}"
                    Width="182" Height="28"
                    Content="Map Editor"
                    Click="MapEditor_Click" RenderTransformOrigin="0.423,0.402"/>

                <Button Style="{StaticResource BadgeButton}"
                    Width="178" Height="27"
                    Content="Light Editor"
                    Click="LightEditor_Click" RenderTransformOrigin="0.423,0.402"/>

                <Button Style="{StaticResource BadgeButton}"
                    Width="178" Height="26"
                    Content="Mission Editor"
                    Click="MissionEditor_Click" RenderTransformOrigin="0.423,0.402"/>

                <Button Style="{StaticResource BadgeButton}"
                    Width="174" Height="28"
                    Margin="14"
                    Content="Style Editor"/>

                <Button Style="{StaticResource BadgeButton}"
                    Width="176"
                    Content="Story Editor" Margin="0,23,0,20"
                    Click="StoryEditor_Click" RenderTransformOrigin="0.423,0.402"/>

                <Button Style="{StaticResource BadgeButton}"
                    Width="164"
                    Content="Exit"
                    Click="Exit_Click" Margin="0,23,0,20"/>
            </UniformGrid>
        </Border>
    </Grid>
</Window>
