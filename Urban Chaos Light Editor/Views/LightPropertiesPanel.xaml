<UserControl x:Class="UrbanChaosLightEditor.Views.LightPropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#252526">

    <UserControl.Resources>
        <!-- Custom checkbox with white tick + white label -->
        <Style x:Key="WhiteTickCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="16" Height="16"
                                    Background="Black"
                                    BorderBrush="White"
                                    BorderThickness="1"
                                    VerticalAlignment="Center">
                                <Path x:Name="CheckMark"
                                      Data="M0,4 L2,6 6,0"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      SnapsToDevicePixels="True"
                                      Margin="4,3,0,0"/>
                            </Border>
                            <ContentPresenter Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="8">
            <StackPanel>

                <!-- Night Flags -->
                <GroupBox Header="Night Flags">
                    <StackPanel Orientation="Vertical">
                        <CheckBox x:Name="ChkNightEnabled"
                  Style="{StaticResource WhiteTickCheckBox}"
                  Content="Night Enabled"
                  Margin="0,0,0,8"/>
                        <WrapPanel>
                            <CheckBox x:Name="ChkLampsOn"
                      Style="{StaticResource WhiteTickCheckBox}"
                      Content="Lamps On"
                      Margin="0,0,16,0"/>
                            <CheckBox x:Name="ChkDarkenWalls"
                      Style="{StaticResource WhiteTickCheckBox}"
                      Content="Darken Walls"
                      Margin="0,0,16,0"/>
                            <CheckBox x:Name="ChkDay"
                      Style="{StaticResource WhiteTickCheckBox}"
                      Content="Day"/>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <!-- D3D Color -->
                <GroupBox Header="D3D Color (ARGB)">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="A"/>
                        <Slider x:Name="SliderD3DAlpha" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=SliderD3DAlpha, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="R"/>
                        <Slider x:Name="SliderD3DRed" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ElementName=SliderD3DRed, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="G"/>
                        <Slider x:Name="SliderD3DGreen" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding ElementName=SliderD3DGreen, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="B"/>
                        <Slider x:Name="SliderD3DBlue" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding ElementName=SliderD3DBlue, Path=Value, StringFormat=F0}"/>

                        <Rectangle x:Name="D3DPreview" Grid.Row="4" Grid.ColumnSpan="3" Height="16" Margin="0,4,0,0" RadiusX="2" RadiusY="2"/>
                    </Grid>
                </GroupBox>

                <!-- Specular Color -->
                <GroupBox Header="Specular Color (ARGB)">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="A"/>
                        <Slider x:Name="SliderSpecAlpha" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=SliderSpecAlpha, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="R"/>
                        <Slider x:Name="SliderSpecRed" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ElementName=SliderSpecRed, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="G"/>
                        <Slider x:Name="SliderSpecGreen" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding ElementName=SliderSpecGreen, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="B"/>
                        <Slider x:Name="SliderSpecBlue" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding ElementName=SliderSpecBlue, Path=Value, StringFormat=F0}"/>

                        <Rectangle x:Name="SpecPreview" Grid.Row="4" Grid.ColumnSpan="3" Height="16" Margin="0,4,0,0" RadiusX="2" RadiusY="2"/>
                    </Grid>
                </GroupBox>

                <!-- Night Ambient -->
                <GroupBox Header="Night Ambient (RGB)">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="R"/>
                        <Slider x:Name="SliderAmbRed" Grid.Row="0" Grid.Column="1" Minimum="-127" Maximum="127" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=SliderAmbRed, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="G"/>
                        <Slider x:Name="SliderAmbGreen" Grid.Row="1" Grid.Column="1" Minimum="-127" Maximum="127" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ElementName=SliderAmbGreen, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="B"/>
                        <Slider x:Name="SliderAmbBlue" Grid.Row="2" Grid.Column="1" Minimum="-127" Maximum="127" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding ElementName=SliderAmbBlue, Path=Value, StringFormat=F0}"/>

                        <Rectangle x:Name="AmbientPreview" Grid.Row="3" Grid.ColumnSpan="3" Height="16" Margin="0,4,0,0" RadiusX="2" RadiusY="2"/>
                    </Grid>
                </GroupBox>

                <!-- Lamppost Color -->
                <GroupBox Header="Lamppost Color + Radius">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="R"/>
                        <Slider x:Name="SliderLampRed" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=SliderLampRed, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="G"/>
                        <Slider x:Name="SliderLampGreen" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ElementName=SliderLampGreen, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="B"/>
                        <Slider x:Name="SliderLampBlue" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding ElementName=SliderLampBlue, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Radius"/>
                        <Slider x:Name="SliderLampRadius" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="1024" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding ElementName=SliderLampRadius, Path=Value, StringFormat=F0}"/>

                        <Rectangle x:Name="LampPreview" Grid.Row="4" Grid.ColumnSpan="3" Height="16" Margin="0,4,0,0" RadiusX="2" RadiusY="2"/>
                    </Grid>
                </GroupBox>

                <!-- Night Sky Colour -->
                <GroupBox Header="Night Sky Colour">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="R"/>
                        <Slider x:Name="SliderSkyRed" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=SliderSkyRed, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="G"/>
                        <Slider x:Name="SliderSkyGreen" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ElementName=SliderSkyGreen, Path=Value, StringFormat=F0}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="B"/>
                        <Slider x:Name="SliderSkyBlue" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="OnPropertyChanged"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding ElementName=SliderSkyBlue, Path=Value, StringFormat=F0}"/>

                        <Rectangle x:Name="SkyPreview" Grid.Row="3" Grid.ColumnSpan="3" Height="16" Margin="0,4,0,0" RadiusX="2" RadiusY="2"/>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Apply Button -->
        <Button Grid.Row="1" Content="Apply Changes" Margin="8" Padding="8,4"
                Click="Apply_Click"
                Background="#0078D4" Foreground="White" BorderBrush="#005A9E"/>
    </Grid>
</UserControl>