<Window x:Class="UrbanChaosMissionEditor.Views.Dialogs.EventPointDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:UrbanChaosMissionEditor.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="550" Width="450"
        MinHeight="400" MinWidth="350"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <conv:ColorIndexToBrushConverter x:Key="ColorIndexToBrush"/>
        <conv:FlagsToStringConverter x:Key="FlagsToString"/>
        <conv:IntToHexConverter x:Key="IntToHex"/>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with type and index -->
        <Border Grid.Row="0" Background="#252526" Padding="10" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Color indicator -->
                <Ellipse Grid.Column="0" Width="24" Height="24"
                         Fill="{Binding ColorIndex, Converter={StaticResource ColorIndexToBrush}}"
                         Stroke="#555555" StrokeThickness="2"
                         VerticalAlignment="Center"/>

                <!-- Type and name -->
                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="{Binding WaypointTypeName}" 
                               Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary}" 
                               Foreground="#AAAAAA" FontSize="11"/>
                </StackPanel>

                <!-- Index badge -->
                <Border Grid.Column="2" Background="#0078D4" CornerRadius="4" Padding="8,4">
                    <TextBlock Foreground="White" FontWeight="Bold">
                        <Run Text="#"/>
                        <Run Text="{Binding Index, Mode=OneWay}"/>
                        <Run Text="{Binding GroupLetter, Mode=OneWay}"/>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>

        <!-- Content scroll area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
            <StackPanel>

                <!-- Basic Properties -->
                <TextBlock Text="BASIC PROPERTIES" Style="{StaticResource HeaderStyle}"/>
                <Border Background="#252526" Padding="10" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WaypointTypeName}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Group:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GroupLetter}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Color:" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" 
                                     Fill="{Binding ColorIndex, Converter={StaticResource ColorIndexToBrush}}"
                                     Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding ColorName}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Direction:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DirectionDegrees, StringFormat={}{0:F1} deg}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Flags:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Flags, Converter={StaticResource FlagsToString}}" 
                                   Style="{StaticResource ValueStyle}" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Category:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CategoryName}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <!-- Position -->
                <TextBlock Text="POSITION" Style="{StaticResource HeaderStyle}"/>
                <Border Background="#252526" Padding="10" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Grid (X, Z):" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PositionString}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="World:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding WorldPositionString}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Height (Y):" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding WorldY}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <!-- Trigger -->
                <TextBlock Text="TRIGGER" Style="{StaticResource HeaderStyle}"/>
                <Border Background="#252526" Padding="10" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Triggered By:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TriggerTypeName}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="On Trigger:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding OnTriggerName}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Radius:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Radius}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="EP Reference:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding EPRef}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="EP Ref Bool:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding EPRefBool}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <!-- Extra Text (conditional) -->
                <StackPanel Visibility="{Binding ExtraText, Converter={StaticResource NullToVisibility}}">
                    <TextBlock Text="TEXT CONTENT" Style="{StaticResource HeaderStyle}"/>
                    <Border Background="#252526" Padding="10" CornerRadius="4">
                        <TextBox Text="{Binding ExtraText, Mode=OneWay}" 
                                 Style="{StaticResource ReadOnlyTextBoxStyle}"
                                 TextWrapping="Wrap"
                                 MaxHeight="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </StackPanel>

                <!-- Trigger Text (conditional) -->
                <StackPanel Visibility="{Binding TriggerText, Converter={StaticResource NullToVisibility}}">
                    <TextBlock Text="TRIGGER TEXT" Style="{StaticResource HeaderStyle}"/>
                    <Border Background="#252526" Padding="10" CornerRadius="4">
                        <TextBox Text="{Binding TriggerText, Mode=OneWay}" 
                                 Style="{StaticResource ReadOnlyTextBoxStyle}"
                                 TextWrapping="Wrap"
                                 MaxHeight="60"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </StackPanel>

                <!-- Data Array -->
                <TextBlock Text="DATA ARRAY" Style="{StaticResource HeaderStyle}"/>
                <Border Background="#252526" Padding="10" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="[0]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Data0}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Data0, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="[1]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Data1}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Data1, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="[2]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Data2}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Data2, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="[3]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Data3}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Data3, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="[4]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Data4}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding Data4, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="[5]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Data5}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="5" Grid.Column="2" Text="{Binding Data5, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="[6]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Data6}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="6" Grid.Column="2" Text="{Binding Data6, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="[7]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Data7}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="7" Grid.Column="2" Text="{Binding Data7, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="8" Grid.Column="0" Text="[8]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding Data8}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="8" Grid.Column="2" Text="{Binding Data8, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="9" Grid.Column="0" Text="[9]" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding Data9}" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="9" Grid.Column="2" Text="{Binding Data9, Converter={StaticResource IntToHex}}" 
                                   Style="{StaticResource LabelStyle}" FontFamily="Consolas"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Close button -->
        <Button Grid.Row="2" Content="Close" Width="80" HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
