<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.BurnPrimEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Burn Prim Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Fire Effects -->
        <TextBlock Text="Fire Effects" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock Text="Select which fire effects to apply to the prim:" 
                   Foreground="#FF888888" FontStyle="Italic" FontSize="11" Margin="0,0,0,5"/>

        <StackPanel Margin="10,0,0,10">
            <CheckBox Content="Flickering Flames" 
                      IsChecked="{Binding BurnFlickeringFlames}"
                      ToolTip="Small flickering fire effect"/>
            <CheckBox Content="Bonfires All Over" 
                      IsChecked="{Binding BurnBonfiresAllOver}"
                      ToolTip="Large bonfire effects spread across the prim"/>
            <CheckBox Content="Thick Flames" 
                      IsChecked="{Binding BurnThickFlames}"
                      ToolTip="Dense, thick flame effect"/>
            <CheckBox Content="Thick Smoke" 
                      IsChecked="{Binding BurnThickSmoke}"
                      ToolTip="Heavy smoke billowing from the prim"/>
            <CheckBox Content="Static" 
                      IsChecked="{Binding BurnStatic}"
                      ToolTip="Fire effect remains static (no animation)"/>
        </StackPanel>

        <Separator Background="#FF555555" Margin="0,5,0,10"/>

        <!-- Info -->
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="Burns a prim (building/object) with the selected fire effects when triggered."/>
            <LineBreak/>
            <Run Text="Multiple effects can be combined for more intense fires."/>
            <LineBreak/>
            <Run Text="The prim to burn is typically linked via the EP Reference in Trigger Settings."/>
        </TextBlock>
    </StackPanel>
</UserControl>
