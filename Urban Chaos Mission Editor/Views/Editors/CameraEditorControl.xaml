<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.CameraEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,4"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Camera Settings:" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Camera Type -->
            <Label Grid.Row="0" Grid.Column="0" Content="Camera Type:"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding CameraTypeOptions}"
                      SelectedIndex="{Binding CameraType}"/>

            <!-- Target Type -->
            <Label Grid.Row="1" Grid.Column="0" Content="Target Type:"/>
            <ComboBox Grid.Row="1" Grid.Column="1" 
                      ItemsSource="{Binding TargetTypeOptions}"
                      SelectedIndex="{Binding TargetType}"/>

            <!-- Follow Player -->
            <CheckBox Grid.Row="2" Grid.Column="1" 
                      Content="Follow Player"
                      IsChecked="{Binding FollowPlayer}"
                      Margin="0,8,0,0"/>
        </Grid>

        <Separator Margin="0,15,0,10" Background="#FF555555"/>

        <!-- Camera Type Descriptions -->
        <TextBlock Text="Camera Types:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontSize="11">
            <Run FontWeight="SemiBold">Normal:</Run> Standard game camera
            <LineBreak/>
            <Run FontWeight="SemiBold">Security Cam:</Run> Fixed position surveillance camera
            <LineBreak/>
            <Run FontWeight="SemiBold">Camcorder:</Run> Handheld camera effect
            <LineBreak/>
            <Run FontWeight="SemiBold">News:</Run> News crew camera style
            <LineBreak/>
            <Run FontWeight="SemiBold">Targetting:</Run> Targeting/aiming camera
        </TextBlock>

        <Separator Margin="0,10,0,10" Background="#FF555555"/>

        <!-- Target Type Descriptions -->
        <TextBlock Text="Target Types:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontSize="11">
            <Run FontWeight="SemiBold">Normal:</Run> No special targeting
            <LineBreak/>
            <Run FontWeight="SemiBold">Attached:</Run> Camera attached to target
            <LineBreak/>
            <Run FontWeight="SemiBold">Nearest Living:</Run> Targets nearest living entity
        </TextBlock>
    </StackPanel>
</UserControl>
