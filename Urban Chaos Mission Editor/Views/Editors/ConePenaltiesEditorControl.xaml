<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.ConePenaltiesEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Cone Penalties Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Info Box -->
        <Border Background="#FF3D4A3D" Padding="15" CornerRadius="4" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ℹ️ Simple Toggle Waypoint" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock TextWrapping="Wrap" Text="This EventPoint has no configurable properties. It simply enables cone penalties when triggered."/>
            </StackPanel>
        </Border>

        <!-- What it does -->
        <TextBlock Text="What It Does" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Border Background="#FF3A3A3D" Padding="10" CornerRadius="4" Margin="0,0,0,15">
            <TextBlock TextWrapping="Wrap" Foreground="#FFAAAAAA">
                <Run Text="When this EventPoint is triggered, it "/>
                <Run Text="enables cone penalties" FontWeight="SemiBold" Foreground="#FFCCCC88"/>
                <Run Text=" for the current driving mission."/>
                <LineBreak/><LineBreak/>
                <Run Text="Once active, hitting traffic cones will result in:"/>
                <LineBreak/>
                <Run Text="  • Point deductions"/>
                <LineBreak/>
                <Run Text="  • Time penalties"/>
                <LineBreak/>
                <Run Text="  • Mission score reductions"/>
            </TextBlock>
        </Border>

        <!-- Usage Tips -->
        <TextBlock Text="Usage Tips" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Border Background="#FF3A3A3D" Padding="10" CornerRadius="4" Margin="0,0,0,15">
            <TextBlock TextWrapping="Wrap" Foreground="#FFAAAAAA">
                <Run Text="• Typically triggered at the start of a driving course or race"/>
                <LineBreak/>
                <Run Text="• Use with 'Game Starts' or 'Radius' trigger for automatic activation"/>
                <LineBreak/>
                <Run Text="• Place traffic cone barrels (Create Barrel → Traffic Cone) on the course"/>
                <LineBreak/>
                <Run Text="• Combine with Count Up Timer for timed driving challenges"/>
            </TextBlock>
        </Border>

        <!-- Trigger Reminder -->
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="Configure when this activates using the Trigger Settings below."/>
            <LineBreak/>
            <Run Text="Common triggers: 'Game Starts', 'Radius', or 'Dependency' on another EventPoint."/>
        </TextBlock>
    </StackPanel>
</UserControl>
