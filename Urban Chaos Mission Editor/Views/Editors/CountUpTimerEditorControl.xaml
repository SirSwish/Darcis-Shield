<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.CountUpTimerEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Count Up Timer Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Info Box -->
        <Border Background="#FF3D4A3D" Padding="15" CornerRadius="4" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="⏱️ Stopwatch Timer" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock TextWrapping="Wrap" Text="This EventPoint starts a visible timer that counts UP from zero when triggered (like a stopwatch)."/>
            </StackPanel>
        </Border>

        <!-- What it does -->
        <TextBlock Text="What It Does" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Border Background="#FF3A3A3D" Padding="10" CornerRadius="4" Margin="0,0,0,15">
            <TextBlock TextWrapping="Wrap" Foreground="#FFAAAAAA">
                <Run Text="When triggered, this waypoint:"/>
                <LineBreak/><LineBreak/>
                <Run Text="  1. Displays a timer on screen"/>
                <LineBreak/>
                <Run Text="  2. Starts counting UP from 00:00"/>
                <LineBreak/>
                <Run Text="  3. Tracks elapsed time for the player"/>
                <LineBreak/><LineBreak/>
                <Run Text="This is the opposite of " FontStyle="Italic"/>
                <Run Text="Visible Countdown" FontWeight="SemiBold" Foreground="#FFCCCC88"/>
                <Run Text=" which counts DOWN." FontStyle="Italic"/>
            </TextBlock>
        </Border>

        <!-- Comparison with Visible Countdown -->
        <TextBlock Text="Timer Types Comparison" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Border Background="#FF3A3A3D" Padding="10" CornerRadius="4" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Count Up Timer" FontWeight="SemiBold" Foreground="#FF88CC88"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Visible Countdown" FontWeight="SemiBold" Foreground="#FFCC8888"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Waypoint Type" Foreground="#FF888888" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Trigger Type" Foreground="#FF888888" Margin="0,5,0,0"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Counts: 0 → ∞" Foreground="#FFAAAAAA" Margin="0,2,0,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Counts: X → 0" Foreground="#FFAAAAAA" Margin="0,2,0,0"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Stopwatch style" Foreground="#FFAAAAAA" Margin="0,2,0,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="Deadline style" Foreground="#FFAAAAAA" Margin="0,2,0,0"/>
            </Grid>
        </Border>

        <!-- Raw Data Fields for debugging -->
        <Expander Header="Raw Data Fields (Debug)" Foreground="#FFCCCCCC" Margin="0,0,0,10">
            <Border Background="#FF3A3A3D" Padding="10" Margin="0,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0" Margin="2">
                        <TextBlock Text="Data[0]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data0, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="2">
                        <TextBlock Text="Data[1]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data1, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="2">
                        <TextBlock Text="Data[2]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data2, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Margin="2">
                        <TextBlock Text="Data[3]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data3, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Column="4" Margin="2">
                        <TextBlock Text="Data[4]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data4, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="2">
                        <TextBlock Text="Data[5]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data5, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="2">
                        <TextBlock Text="Data[6]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data6, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="2">
                        <TextBlock Text="Data[7]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data7, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="3" Margin="2">
                        <TextBlock Text="Data[8]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data8, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="4" Margin="2">
                        <TextBlock Text="Data[9]" FontSize="10" Foreground="#FF888888"/>
                        <TextBox Text="{Binding Data9, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Expander>

        <Separator Background="#FF555555" Margin="0,5,0,10"/>

        <!-- Usage Tips -->
        <TextBlock Text="Usage Tips" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="• Use for time-attack challenges where players try to complete tasks quickly"/>
            <LineBreak/>
            <Run Text="• Trigger at the start of a race or challenge section"/>
            <LineBreak/>
            <Run Text="• Combine with Bonus Points to reward fast completion times"/>
        </TextBlock>
    </StackPanel>
</UserControl>
