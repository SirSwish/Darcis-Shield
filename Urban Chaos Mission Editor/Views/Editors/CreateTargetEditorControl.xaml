<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.CreateTargetEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="Black"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Camera Target Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Movement and Target Type -->
        <TextBlock Text="Target Behavior" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Move Type:"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding TargetMoveOptions}"
                      SelectedIndex="{Binding TargetMoveType}"
                      ToolTip="How the target moves between positions"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Target Type:"/>
            <ComboBox Grid.Row="1" Grid.Column="1" 
                      ItemsSource="{Binding CamTargetTypeOptions}"
                      SelectedIndex="{Binding CamTargetType}"
                      ToolTip="What the camera target tracks"/>
        </Grid>

        <Separator Background="#FF555555" Margin="0,5,0,10"/>

        <!-- Speed and Timing -->
        <TextBlock Text="Speed and Timing" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Speed:"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <TextBox Text="{Binding TargetSpeed, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Movement speed of the target"/>
                <TextBlock Text="(movement speed)" Foreground="#FF888888" 
                           VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
            </StackPanel>

            <Label Grid.Row="1" Grid.Column="0" Content="Delay:"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                <TextBox Text="{Binding TargetDelay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Delay before target starts moving"/>
                <TextBlock Text="(frames before start)" Foreground="#FF888888" 
                           VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
            </StackPanel>
        </Grid>

        <Separator Background="#FF555555" Margin="0,5,0,10"/>

        <!-- Camera Options -->
        <TextBlock Text="Camera Options" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Zoom:"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <TextBox Text="{Binding TargetCameraZoom, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Camera zoom level"/>
                <TextBlock Text="(zoom level)" Foreground="#FF888888" 
                           VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
            </StackPanel>

            <CheckBox Grid.Row="1" Grid.Column="1" 
                      Content="Rotate Camera" 
                      IsChecked="{Binding TargetCameraRotate}"
                      ToolTip="Enable camera rotation"/>
        </Grid>

        <Separator Background="#FF555555" Margin="0,5,0,10"/>

        <!-- Descriptions -->
        <TextBlock Text="Target Type Descriptions:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="- Normal - Fixed target position"/>
            <LineBreak/>
            <Run Text="- Attached - Target attached to an object/character"/>
            <LineBreak/>
            <Run Text="- Nearest Living - Automatically targets nearest living entity"/>
        </TextBlock>

        <TextBlock Text="Move Type Descriptions:" FontWeight="SemiBold" Margin="0,10,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="- Normal - Standard linear movement"/>
            <LineBreak/>
            <Run Text="- Smooth - Smooth interpolated movement"/>
            <LineBreak/>
            <Run Text="- Wobbly - Shaky/handheld camera effect"/>
        </TextBlock>
    </StackPanel>
</UserControl>
