<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.CreateTreasureEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Create Treasure Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Treasure Value -->
        <TextBlock Text="Treasure Value" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Points:"/>
            <Slider Grid.Column="1" 
                    Minimum="0" Maximum="10000" 
                    Value="{Binding TreasureValue}"
                    TickFrequency="500"
                    IsSnapToTickEnabled="False"
                    ToolTip="Point value of the treasure (0-10000)"/>
            <TextBox Grid.Column="2" 
                     Text="{Binding TreasureValue, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Point value of the treasure (0-10000)"/>
        </Grid>

        <!-- Quick value buttons -->
        <TextBlock Text="Quick Values" FontWeight="SemiBold" Margin="0,10,0,5"/>
        <WrapPanel Margin="0,0,0,10">
            <Button Content="100" Click="SetValue100_Click" Width="50" Margin="0,0,5,5"
                    Background="#FF3E3E42" Foreground="#FFCCCCCC" BorderBrush="#FF555555"/>
            <Button Content="250" Click="SetValue250_Click" Width="50" Margin="0,0,5,5"
                    Background="#FF3E3E42" Foreground="#FFCCCCCC" BorderBrush="#FF555555"/>
            <Button Content="500" Click="SetValue500_Click" Width="50" Margin="0,0,5,5"
                    Background="#FF3E3E42" Foreground="#FFCCCCCC" BorderBrush="#FF555555"/>
            <Button Content="1000" Click="SetValue1000_Click" Width="50" Margin="0,0,5,5"
                    Background="#FF3E3E42" Foreground="#FFCCCCCC" BorderBrush="#FF555555"/>
            <Button Content="2500" Click="SetValue2500_Click" Width="50" Margin="0,0,5,5"
                    Background="#FF3E3E42" Foreground="#FFCCCCCC" BorderBrush="#FF555555"/>
            <Button Content="5000" Click="SetValue5000_Click" Width="50" Margin="0,0,5,5"
                    Background="#FF3E3E42" Foreground="#FFCCCCCC" BorderBrush="#FF555555"/>
        </WrapPanel>

        <Separator Background="#FF555555" Margin="0,5,0,10"/>

        <!-- Info -->
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="Creates a collectible treasure item at this location."/>
            <LineBreak/>
            <Run Text="When the player picks up the treasure, they receive the specified point value."/>
            <LineBreak/>
            <Run Text="Treasures are typically used for bonus objectives or scoring."/>
        </TextBlock>
    </StackPanel>
</UserControl>
