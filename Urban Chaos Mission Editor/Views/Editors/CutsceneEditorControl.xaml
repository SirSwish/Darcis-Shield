<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.CutsceneEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:UrbanChaosMissionEditor.Controls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Cutscene Editor" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="Timeline-based event sequencer for scripted scenes" 
                               Foreground="#FF888888" FontStyle="Italic" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnAddChannel" Content="+ Add Channel" Click="AddChannel_Click" Margin="0,0,5,0"/>
                    <Button x:Name="BtnAddPacket" Content="+ Add Packet" Click="AddPacket_Click" Margin="0,0,5,0"/>
                    <Button x:Name="InitButton" Content="Initialize Cutscene" Click="InitializeCutscene_Click" 
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content - Split between Timeline and Properties -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Timeline Control -->
            <Border Grid.Column="0" Background="#FF1E1E1E" CornerRadius="4" 
                    VerticalAlignment="Stretch" ClipToBounds="True">
                <Grid>
                    <!-- Timeline -->
                    <controls:TimelineControl x:Name="Timeline" 
                                              PacketSelected="Timeline_PacketSelected"
                                              ChannelSelected="Timeline_ChannelSelected"
                                              PlayheadMoved="Timeline_PlayheadMoved"
                                              CutsceneModified="Timeline_CutsceneModified"/>

                    <!-- Empty state overlay -->
                    <Border x:Name="EmptyStateOverlay" Background="#FF1E1E1E" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="No Cutscene Data" FontSize="16" Foreground="#FF666666" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Click 'Initialize Cutscene' to create a new cutscene" 
                                       Foreground="#FF555555" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <Button Content="Initialize Cutscene" Click="InitializeCutscene_Click"
                                    HorizontalAlignment="Center" Padding="15,8"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                          Background="Transparent" VerticalAlignment="Stretch"/>

            <!-- Properties Panel - Use DockPanel to properly constrain ScrollViewer -->
            <!-- VerticalAlignment="Stretch" ensures this doesn't grow beyond the available space -->
            <!-- ClipToBounds="True" prevents content from affecting layout outside bounds -->
            <Border Grid.Column="2" Background="#FF252526" CornerRadius="4" 
                    VerticalAlignment="Stretch" ClipToBounds="True">
                <DockPanel LastChildFill="True">
                    <!-- Header - docked to top -->
                    <Border DockPanel.Dock="Top" Background="#FF3A3A3D" Padding="8,6">
                        <TextBlock Text="Properties" FontWeight="SemiBold"/>
                    </Border>

                    <!-- Content area - fills remaining space and scrolls internally -->
                    <!-- The key fix: ScrollViewer fills remaining space without affecting parent height -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="PropertiesPanel" Margin="10">
                            <!-- Summary section -->
                            <TextBlock Text="Cutscene Summary" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Foreground="#FF888888"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="VersionText" Text="N/A"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Channels:" Foreground="#FF888888"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ChannelCountText" Text="0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Duration:" Foreground="#FF888888"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DurationText" Text="0 frames"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Playhead:" Foreground="#FF888888"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="PlayheadText" Text="0"/>
                            </Grid>

                            <Separator Background="#FF555555" Margin="0,5,0,10"/>

                            <!-- Selected item properties -->
                            <StackPanel x:Name="SelectedItemPropertiesContainer">
                                <TextBlock Text="Select a channel or packet" Foreground="#FF666666" FontStyle="Italic"/>
                                <TextBlock Text="to view and edit its properties" Foreground="#FF555555" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>