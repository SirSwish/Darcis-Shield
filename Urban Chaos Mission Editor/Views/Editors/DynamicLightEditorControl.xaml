<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.DynamicLightEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="Black"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Dynamic Light Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <!-- Light Type -->
            <TextBlock Text="Light Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Type:"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding DynamicLightTypeOptions}"
                          SelectedIndex="{Binding DynamicLightType}"
                          ToolTip="Dynamic light behavior type"/>
            </Grid>

            <Separator Background="#FF555555" Margin="0,5,0,10"/>

            <!-- Speed -->
            <TextBlock Text="Speed" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Speed:"/>
                <Slider Grid.Column="1"
                        Minimum="1" Maximum="32"
                        Value="{Binding DynamicLightSpeed}"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        ToolTip="Speed (1-32)"/>
                <TextBox Grid.Column="2"
                         Text="{Binding DynamicLightSpeed, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Speed (1-32)"/>
            </Grid>

            <!-- Steps -->
            <TextBlock Text="Steps" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Steps:"/>
                <Slider Grid.Column="1"
                        Minimum="1" Maximum="32"
                        Value="{Binding DynamicLightSteps}"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        ToolTip="Number of steps (1-32)"/>
                <TextBox Grid.Column="2"
                         Text="{Binding DynamicLightSteps, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Number of steps (1-32)"/>
            </Grid>

            <!-- Step pattern -->
            <TextBlock Text="Step Pattern" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Border Background="#FF3A3A3D" Padding="10" CornerRadius="4" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Toggle which steps are active." Foreground="#FFAAAAAA" FontSize="11" Margin="0,0,0,8"/>
                    <WrapPanel>
                        <CheckBox Content="1"  IsChecked="{Binding DynamicLightStep1}"  Visibility="{Binding DynamicLightStep1Visibility}"  Width="40"/>
                        <CheckBox Content="2"  IsChecked="{Binding DynamicLightStep2}"  Visibility="{Binding DynamicLightStep2Visibility}"  Width="40"/>
                        <CheckBox Content="3"  IsChecked="{Binding DynamicLightStep3}"  Visibility="{Binding DynamicLightStep3Visibility}"  Width="40"/>
                        <CheckBox Content="4"  IsChecked="{Binding DynamicLightStep4}"  Visibility="{Binding DynamicLightStep4Visibility}"  Width="40"/>
                        <CheckBox Content="5"  IsChecked="{Binding DynamicLightStep5}"  Visibility="{Binding DynamicLightStep5Visibility}"  Width="40"/>
                        <CheckBox Content="6"  IsChecked="{Binding DynamicLightStep6}"  Visibility="{Binding DynamicLightStep6Visibility}"  Width="40"/>
                        <CheckBox Content="7"  IsChecked="{Binding DynamicLightStep7}"  Visibility="{Binding DynamicLightStep7Visibility}"  Width="40"/>
                        <CheckBox Content="8"  IsChecked="{Binding DynamicLightStep8}"  Visibility="{Binding DynamicLightStep8Visibility}"  Width="40"/>
                        <CheckBox Content="9"  IsChecked="{Binding DynamicLightStep9}"  Visibility="{Binding DynamicLightStep9Visibility}"  Width="40"/>
                        <CheckBox Content="10" IsChecked="{Binding DynamicLightStep10}" Visibility="{Binding DynamicLightStep10Visibility}" Width="45"/>
                        <CheckBox Content="11" IsChecked="{Binding DynamicLightStep11}" Visibility="{Binding DynamicLightStep11Visibility}" Width="45"/>
                        <CheckBox Content="12" IsChecked="{Binding DynamicLightStep12}" Visibility="{Binding DynamicLightStep12Visibility}" Width="45"/>
                        <CheckBox Content="13" IsChecked="{Binding DynamicLightStep13}" Visibility="{Binding DynamicLightStep13Visibility}" Width="45"/>
                        <CheckBox Content="14" IsChecked="{Binding DynamicLightStep14}" Visibility="{Binding DynamicLightStep14Visibility}" Width="45"/>
                        <CheckBox Content="15" IsChecked="{Binding DynamicLightStep15}" Visibility="{Binding DynamicLightStep15Visibility}" Width="45"/>
                        <CheckBox Content="16" IsChecked="{Binding DynamicLightStep16}" Visibility="{Binding DynamicLightStep16Visibility}" Width="45"/>
                        <CheckBox Content="17" IsChecked="{Binding DynamicLightStep17}" Visibility="{Binding DynamicLightStep17Visibility}" Width="45"/>
                        <CheckBox Content="18" IsChecked="{Binding DynamicLightStep18}" Visibility="{Binding DynamicLightStep18Visibility}" Width="45"/>
                        <CheckBox Content="19" IsChecked="{Binding DynamicLightStep19}" Visibility="{Binding DynamicLightStep19Visibility}" Width="45"/>
                        <CheckBox Content="20" IsChecked="{Binding DynamicLightStep20}" Visibility="{Binding DynamicLightStep20Visibility}" Width="45"/>
                        <CheckBox Content="21" IsChecked="{Binding DynamicLightStep21}" Visibility="{Binding DynamicLightStep21Visibility}" Width="45"/>
                        <CheckBox Content="22" IsChecked="{Binding DynamicLightStep22}" Visibility="{Binding DynamicLightStep22Visibility}" Width="45"/>
                        <CheckBox Content="23" IsChecked="{Binding DynamicLightStep23}" Visibility="{Binding DynamicLightStep23Visibility}" Width="45"/>
                        <CheckBox Content="24" IsChecked="{Binding DynamicLightStep24}" Visibility="{Binding DynamicLightStep24Visibility}" Width="45"/>
                        <CheckBox Content="25" IsChecked="{Binding DynamicLightStep25}" Visibility="{Binding DynamicLightStep25Visibility}" Width="45"/>
                        <CheckBox Content="26" IsChecked="{Binding DynamicLightStep26}" Visibility="{Binding DynamicLightStep26Visibility}" Width="45"/>
                        <CheckBox Content="27" IsChecked="{Binding DynamicLightStep27}" Visibility="{Binding DynamicLightStep27Visibility}" Width="45"/>
                        <CheckBox Content="28" IsChecked="{Binding DynamicLightStep28}" Visibility="{Binding DynamicLightStep28Visibility}" Width="45"/>
                        <CheckBox Content="29" IsChecked="{Binding DynamicLightStep29}" Visibility="{Binding DynamicLightStep29Visibility}" Width="45"/>
                        <CheckBox Content="30" IsChecked="{Binding DynamicLightStep30}" Visibility="{Binding DynamicLightStep30Visibility}" Width="45"/>
                        <CheckBox Content="31" IsChecked="{Binding DynamicLightStep31}" Visibility="{Binding DynamicLightStep31Visibility}" Width="45"/>
                        <CheckBox Content="32" IsChecked="{Binding DynamicLightStep32}" Visibility="{Binding DynamicLightStep32Visibility}" Width="45"/>
                    </WrapPanel>

                    <TextBlock Text="Active steps:" Foreground="#FF888888" FontSize="11" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding DynamicLightStepPatternText}" Foreground="#FF888888" FontSize="11"/>
                </StackPanel>
            </Border>

            <Separator Background="#FF555555" Margin="0,5,0,10"/>

            <!-- Colors -->
            <TextBlock Text="Colors" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Color A:"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding DynamicLightColorA, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Windows COLORREF integer (0x00BBGGRR)"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Color B:"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding DynamicLightColorB, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Windows COLORREF integer (0x00BBGGRR)"/>
            </Grid>

            <!-- Info -->
            <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
                <Run Text="Animates a dynamic light using type, speed, steps, and step pattern."/>
                <LineBreak/>
                <Run Text="Color A / Color B are stored as Windows COLORREF values (0x00BBGGRR)."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>