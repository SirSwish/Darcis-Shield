<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.EndGameLoseEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="End Game - Failure" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>

        <!-- Failure Icon -->
        <Border Background="#FF5A2D2D" CornerRadius="4" Padding="15" Margin="0,0,0,15" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="💀" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="MISSION FAILED" FontSize="16" FontWeight="Bold" 
                           Foreground="#FFFF6B6B" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Separator Background="#FF555555" Margin="0,0,0,15"/>

        <!-- Description -->
        <TextBlock Text="About End Game Lose:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontSize="12" Margin="0,0,0,15">
            <Run Text="When this EventPoint is triggered, the mission ends in failure."/>
            <LineBreak/><LineBreak/>
            <Run Text="The player will see the mission failed screen and must restart"/>
            <Run Text="from the beginning or a checkpoint."/>
        </TextBlock>

        <Separator Background="#FF555555" Margin="0,0,0,15"/>

        <!-- Usage Tips -->
        <TextBlock Text="Usage Tips:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="• Use for critical mission failure conditions"/>
            <LineBreak/>
            <Run Text="• Triggered when important NPCs die or objectives fail"/>
            <LineBreak/>
            <Run Text="• Can be triggered by timers expiring"/>
            <LineBreak/>
            <Run Text="• Consider using a Message EventPoint before this to explain why"/>
        </TextBlock>

        <Separator Background="#FF555555" Margin="0,15,0,15"/>

        <!-- No additional configuration needed -->
        <Border Background="#FF3E3E42" CornerRadius="4" Padding="10">
            <TextBlock Text="ℹ️ This EventPoint has no additional configuration options.&#x0a;Use the Trigger and Position settings above." 
                       TextWrapping="Wrap" Foreground="#FFAAAAAA" FontSize="11"/>
        </Border>
    </StackPanel>
</UserControl>
