<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.EnemyEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="Black"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,2,10,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Basic Settings -->
        <TextBlock Text="Basic Settings" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Type:"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding EnemyTypeOptions}"
                      SelectedIndex="{Binding EnemyType}"
                      ToolTip="The type/appearance of enemy to spawn"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Count:"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding EnemyCount, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Number of enemies to spawn (1-99)"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Health:"/>
            <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding EnemyConstitution, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Enemy health/constitution (0-100, 0=default ~50)"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Movement:"/>
            <ComboBox Grid.Row="3" Grid.Column="1" 
                      ItemsSource="{Binding EnemyMoveOptions}"
                      SelectedIndex="{Binding EnemyMoveType}"
                      ToolTip="How the enemy moves around"/>

            <Label Grid.Row="4" Grid.Column="0" Content="AI Type:"/>
            <ComboBox Grid.Row="4" Grid.Column="1" 
                      ItemsSource="{Binding EnemyAIOptions}"
                      SelectedIndex="{Binding EnemyAIType}"
                      ToolTip="The AI behavior pattern"/>
        </Grid>

        <Separator Background="#FF555555" Margin="0,8,0,8"/>

        <!-- AI Targets -->
        <TextBlock Text="AI Targets" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Guard EP:"/>
            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding EnemyGuardTarget, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="EventPoint index to guard/assassinate (for Assassin, Bodyguard, Guard AIs)"/>

            <Label Grid.Row="0" Grid.Column="3" Content="Follow EP:"/>
            <TextBox Grid.Row="0" Grid.Column="4" 
                     Text="{Binding EnemyFollowTarget, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="EventPoint index to follow (for Follow movement type)"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Ability:"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"
                      ItemsSource="{Binding EnemyAbilityOptions}"
                      SelectedIndex="{Binding EnemyAbilityLevel}"
                      ToolTip="Combat ability level (1=weak, 15=badass)"
                      Width="150" HorizontalAlignment="Left"/>
        </Grid>

        <Separator Background="#FF555555" Margin="0,8,0,8"/>

        <!-- Weapons (HAS_* flags) -->
        <TextBlock Text="Starting Weapons" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <WrapPanel Margin="0,0,0,5">
            <CheckBox Content="Pistol" IsChecked="{Binding HasPistol}" Width="80"/>
            <CheckBox Content="Shotgun" IsChecked="{Binding HasShotgun}" Width="80"/>
            <CheckBox Content="AK47" IsChecked="{Binding HasAK47}" Width="80"/>
            <CheckBox Content="Grenade" IsChecked="{Binding HasGrenade}" Width="80"/>
            <CheckBox Content="Knife" IsChecked="{Binding HasKnife}" Width="80"/>
            <CheckBox Content="Bat" IsChecked="{Binding HasBat}" Width="80"/>
            <CheckBox Content="Balloon" IsChecked="{Binding HasBalloon}" Width="80"/>
        </WrapPanel>

        <Separator Background="#FF555555" Margin="0,8,0,8"/>

        <!-- Enemy Flags -->
        <TextBlock Text="Behavior Flags" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <WrapPanel Margin="0,0,0,3">
            <CheckBox Content="Lazy" IsChecked="{Binding FlagLazy}" Width="90" ToolTip="Less alert/responsive"/>
            <CheckBox Content="Diligent" IsChecked="{Binding FlagDiligent}" Width="90" ToolTip="More alert/aggressive"/>
            <CheckBox Content="Gang" IsChecked="{Binding FlagGang}" Width="90" ToolTip="Part of a gang"/>
            <CheckBox Content="Fight Back" IsChecked="{Binding FlagFightBack}" Width="90" ToolTip="Will fight when attacked"/>
        </WrapPanel>
        <WrapPanel Margin="0,0,0,3">
            <CheckBox Content="Just Kill Player" IsChecked="{Binding FlagJustKillPlayer}" Width="120" ToolTip="Only targets player"/>
            <CheckBox Content="Robotic" IsChecked="{Binding FlagRobotic}" Width="90" ToolTip="Mechanical movement"/>
            <CheckBox Content="Restricted" IsChecked="{Binding FlagRestricted}" Width="90" ToolTip="Restricted movement area"/>
        </WrapPanel>
        <WrapPanel Margin="0,0,0,3">
            <CheckBox Content="Only Player Kills" IsChecked="{Binding FlagOnlyPlayerKills}" Width="120" ToolTip="Can only be killed by player"/>
            <CheckBox Content="Invulnerable" IsChecked="{Binding FlagInvulnerable}" Width="100" ToolTip="Cannot be damaged"/>
            <CheckBox Content="Guilty" IsChecked="{Binding FlagGuilty}" Width="80" ToolTip="Has committed a crime"/>
        </WrapPanel>
        <WrapPanel Margin="0,0,0,3">
            <CheckBox Content="Fake Wander" IsChecked="{Binding FlagFakeWander}" Width="100" ToolTip="Pretends to wander"/>
            <CheckBox Content="Can Carry" IsChecked="{Binding FlagCanCarry}" Width="90" ToolTip="Player can carry this person"/>
        </WrapPanel>

        <!-- Zone Flags -->
        <TextBlock Text="Zone Restrictions" FontWeight="SemiBold" Margin="0,8,0,5"/>
        <WrapPanel>
            <CheckBox Content="Blue Zone" IsChecked="{Binding FlagBlueZone}" Width="90"/>
            <CheckBox Content="Cyan Zone" IsChecked="{Binding FlagCyanZone}" Width="90"/>
            <CheckBox Content="Yellow Zone" IsChecked="{Binding FlagYellowZone}" Width="95"/>
            <CheckBox Content="Magenta Zone" IsChecked="{Binding FlagMagentaZone}" Width="105"/>
        </WrapPanel>

        <Separator Background="#FF555555" Margin="0,8,0,8"/>

        <!-- Combat Abilities -->
        <TextBlock Text="Combat Abilities" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <WrapPanel Margin="0,0,0,3">
            <CheckBox Content="Slide Attack" IsChecked="{Binding CombatSlide}" Width="100" ToolTip="Can perform slide attack"/>
            <CheckBox Content="PPP Combo" IsChecked="{Binding CombatComboPPP}" Width="100" ToolTip="Punch-Punch-Punch combo"/>
            <CheckBox Content="KKK Combo" IsChecked="{Binding CombatComboKKK}" Width="100" ToolTip="Kick-Kick-Kick combo"/>
        </WrapPanel>
        <WrapPanel>
            <CheckBox Content="Any Combo" IsChecked="{Binding CombatComboAny}" Width="100" ToolTip="Mixed combos"/>
            <CheckBox Content="Grapple" IsChecked="{Binding CombatGrapple}" Width="80" ToolTip="Grappling attacks"/>
            <CheckBox Content="Side Kick" IsChecked="{Binding CombatSideKick}" Width="90" ToolTip="Side kick attack"/>
            <CheckBox Content="Back Kick" IsChecked="{Binding CombatBackKick}" Width="90" ToolTip="Back kick attack"/>
        </WrapPanel>

        <Separator Background="#FF555555" Margin="0,8,0,8"/>

        <!-- Info text -->
        <TextBlock Text="Enemies spawn at this position when triggered. Use the same Group letter to link patrol waypoints."
                   TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11"/>
    </StackPanel>
</UserControl>
