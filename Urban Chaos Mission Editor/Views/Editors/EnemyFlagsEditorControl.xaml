<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.EnemyFlagsEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Enemy Flags Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <!-- Target Enemy EP -->
            <Border Background="#FF4A3030" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Target Enemy EP:" FontWeight="SemiBold"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBox Text="{Binding EnemyFlagsTargetEP, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="EventPoint index of the Create Enemies waypoint to modify"/>
                        <TextBlock Text="(EP index of enemy to modify)" Foreground="#FF888888" 
                                   VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Flags to Apply -->
            <TextBlock Text="Flags to Apply" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock Text="These flags will be set on the target enemy when triggered:" 
                       Foreground="#FF888888" FontStyle="Italic" FontSize="11" Margin="0,0,0,10"/>

            <!-- Behavior Flags -->
            <TextBlock Text="Behavior" FontWeight="SemiBold" Foreground="#FF88AACC" Margin="0,0,0,5"/>
            <WrapPanel Margin="10,0,0,10">
                <CheckBox Content="Lazy" IsChecked="{Binding EnemyFlagsLazy}" Width="130" 
                          ToolTip="Less aggressive behavior"/>
                <CheckBox Content="Diligent" IsChecked="{Binding EnemyFlagsDiligent}" Width="130" 
                          ToolTip="More aggressive behavior"/>
                <CheckBox Content="Gang Member" IsChecked="{Binding EnemyFlagsGang}" Width="130" 
                          ToolTip="Part of a gang"/>
                <CheckBox Content="Fight Back" IsChecked="{Binding EnemyFlagsFightBack}" Width="130" 
                          ToolTip="Will fight back when attacked"/>
                <CheckBox Content="Just Kill Player" IsChecked="{Binding EnemyFlagsJustKillPlayer}" Width="130" 
                          ToolTip="Only targets the player"/>
                <CheckBox Content="Robotic" IsChecked="{Binding EnemyFlagsRobotic}" Width="130" 
                          ToolTip="Robotic movement behavior"/>
                <CheckBox Content="Restricted Movement" IsChecked="{Binding EnemyFlagsRestrictedMovement}" Width="130" 
                          ToolTip="Movement is restricted"/>
                <CheckBox Content="Only Player Kills" IsChecked="{Binding EnemyFlagsOnlyPlayerKills}" Width="130" 
                          ToolTip="Can only be killed by player"/>
            </WrapPanel>

            <!-- Zone Flags -->
            <TextBlock Text="Zone Restrictions" FontWeight="SemiBold" Foreground="#FF88AACC" Margin="0,0,0,5"/>
            <WrapPanel Margin="10,0,0,10">
                <CheckBox Content="Blue Zone" IsChecked="{Binding EnemyFlagsBlueZone}" Width="100" 
                          ToolTip="Restricted to blue zone"/>
                <CheckBox Content="Cyan Zone" IsChecked="{Binding EnemyFlagsCyanZone}" Width="100" 
                          ToolTip="Restricted to cyan zone"/>
                <CheckBox Content="Yellow Zone" IsChecked="{Binding EnemyFlagsYellowZone}" Width="100" 
                          ToolTip="Restricted to yellow zone"/>
                <CheckBox Content="Magenta Zone" IsChecked="{Binding EnemyFlagsMagentaZone}" Width="100" 
                          ToolTip="Restricted to magenta zone"/>
            </WrapPanel>

            <!-- Special Flags -->
            <TextBlock Text="Special" FontWeight="SemiBold" Foreground="#FF88AACC" Margin="0,0,0,5"/>
            <WrapPanel Margin="10,0,0,10">
                <CheckBox Content="Invulnerable" IsChecked="{Binding EnemyFlagsInvulnerable}" Width="130" 
                          ToolTip="Cannot be killed"/>
                <CheckBox Content="Guilty" IsChecked="{Binding EnemyFlagsGuilty}" Width="130" 
                          ToolTip="Marked as guilty (can be arrested)"/>
                <CheckBox Content="Fake Wandering" IsChecked="{Binding EnemyFlagsFakeWandering}" Width="130" 
                          ToolTip="Pretends to wander but follows a pattern"/>
                <CheckBox Content="Can Be Carried" IsChecked="{Binding EnemyFlagsCanBeCarried}" Width="130" 
                          ToolTip="Player can pick up and carry this enemy"/>
            </WrapPanel>

            <Separator Background="#FF555555" Margin="0,5,0,10"/>

            <!-- Info -->
            <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
                <Run Text="Modifies the behavior flags of an existing Create Enemies EventPoint when triggered."/>
                <LineBreak/>
                <Run Text="Set the Target Enemy EP to the index of the enemy waypoint you want to modify."/>
                <LineBreak/>
                <Run Text="The selected flags will replace the target enemy's flags when this waypoint triggers."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
