<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.GroupResetEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Group Reset" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Border Background="#FF3A3A3D" Padding="10" CornerRadius="4">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" Foreground="#FFAAAAAA">
                        No type-specific properties.
                    </TextBlock>

                    <Separator Background="#FF555555" Margin="0,10,0,10"/>

                    <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontSize="11">
                        Resets all waypoints of this EventPoint's Colour + Group to:
                        Alive and Unactivated.
                        Set Colour/Group in the common fields.
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>