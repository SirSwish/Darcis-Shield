<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.IncrementEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Increment Counter" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <TextBlock Text="Counter Settings" FontWeight="SemiBold" Margin="0,0,0,5"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0 -->
                <Label Grid.Row="0" Grid.Column="0" Content="Increment By:"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding IncrementBy, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Data[0] - amount (0..256)"/>

                <!-- Row 1 -->
                <Label Grid.Row="1" Grid.Column="0" Content="Counter Index:"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding IncrementCounterIndex, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Data[1] - counter index (1..10)"/>
            </Grid>

            <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
                <Run Text="Data[0] = increment amount (0..256), Data[1] = counter index (1..10)."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>