<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.KillWaypointEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Kill Waypoint" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <TextBlock Text="Target" FontWeight="SemiBold" Margin="0,0,0,5"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Kill EP Index:"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding KillWaypointTarget, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Data[0] - target EventPoint index to kill (must be non-zero)"/>
            </Grid>

            <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
                <Run Text="Stops processing of the referenced EventPoint."/>
                <LineBreak/>
                <Run Text="Stored in Data[0]. 0 is invalid."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>