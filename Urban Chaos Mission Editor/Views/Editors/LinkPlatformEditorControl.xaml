<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.LinkPlatformEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Link Platform" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <TextBlock Text="Platform Settings" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Speed:"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding PlatformSpeed, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Data[0] - platform_speed"/>
            </Grid>

            <Separator Background="#FF555555" Margin="0,5,0,10"/>

            <TextBlock Text="Flags" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <StackPanel>
                <CheckBox Content="Lock to axis" IsChecked="{Binding PlatformLockToAxis}" ToolTip="Data[1] bit 0"/>
                <CheckBox Content="Lock rotation" IsChecked="{Binding PlatformLockRotation}" ToolTip="Data[1] bit 1"/>
                <CheckBox Content="Is a rocket" IsChecked="{Binding PlatformIsRocket}" ToolTip="Data[1] bit 2"/>
            </StackPanel>

            <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11" Margin="0,10,0,0">
                <Run Text="From platformSetup.cpp:"/>
                <LineBreak/>
                <Run Text="Data[0] = speed, Data[1] = flags (Lock axis, Lock rotation, Rocket)."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>