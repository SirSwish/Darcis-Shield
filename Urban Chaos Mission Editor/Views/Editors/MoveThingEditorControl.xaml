<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.MoveThingEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Move Thing Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Target Waypoint -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Target Waypoint:"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox Text="{Binding MoveThingTarget, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="EventPoint index to move to this location (1-2048)"/>
                <TextBlock Text="(EP index)" Foreground="#FF888888" 
                           VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
            </StackPanel>
        </Grid>

        <Separator Background="#FF555555" Margin="0,5,0,10"/>

        <!-- Info -->
        <TextBlock Text="How Move Thing Works:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
            <Run Text="When triggered, the Move Thing waypoint will relocate the specified target"/>
            <Run Text="EventPoint to this waypoint's position."/>
            <LineBreak/><LineBreak/>
            <Run Text="This is useful for:"/>
            <LineBreak/>
            <Run Text="- Moving spawn points during gameplay"/>
            <LineBreak/>
            <Run Text="- Repositioning patrol destinations"/>
            <LineBreak/>
            <Run Text="- Dynamic mission objective locations"/>
            <LineBreak/><LineBreak/>
            <Run Text="The target waypoint will be moved to match this waypoint's X, Y, Z coordinates."/>
        </TextBlock>
    </StackPanel>
</UserControl>
