<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.NavBeaconEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Nav Beacon Configuration" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <!-- Label / Text -->
            <TextBlock Text="Beacon Text" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding ExtraText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="120"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ToolTip="Nav beacon label text (stored as ExtraText in the UCM file)"/>

            <Separator Background="#FF555555" Margin="0,10,0,10"/>

            <!-- Person EP -->
            <TextBlock Text="Person Attachment" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Person EP:"/>
                <TextBox Grid.Column="1"
                         Width="120"
                         HorizontalAlignment="Left"
                         Text="{Binding NavBeaconPersonEP, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Data[1] - EP index of Create Player/Enemies/Creature (0 = none)"/>
            </Grid>

            <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic" FontSize="11">
                <Run Text="Nav Beacon text is stored in the mission text-extra section (ExtraText)."/>
                <LineBreak/>
                <Run Text="Data[1] stores the EP index of the person to attach to (0 = none)."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>