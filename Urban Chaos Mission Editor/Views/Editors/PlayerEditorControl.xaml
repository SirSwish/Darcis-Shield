<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.PlayerEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="0,5,15,5"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Select Player Character:" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Player Type Selection -->
        <StackPanel>
            <RadioButton Content="Darci" 
                         IsChecked="{Binding PlayerType, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                         GroupName="PlayerType"/>
            <RadioButton Content="Roper" 
                         IsChecked="{Binding PlayerType, Converter={StaticResource IntToBoolConverter}, ConverterParameter=2}"
                         GroupName="PlayerType"/>
            <RadioButton Content="Cop" 
                         IsChecked="{Binding PlayerType, Converter={StaticResource IntToBoolConverter}, ConverterParameter=3}"
                         GroupName="PlayerType"/>
            <RadioButton Content="Gang Member" 
                         IsChecked="{Binding PlayerType, Converter={StaticResource IntToBoolConverter}, ConverterParameter=4}"
                         GroupName="PlayerType"/>
        </StackPanel>

        <Separator Margin="0,15,0,10" Background="#FF555555"/>

        <!-- Info text -->
        <TextBlock Text="The player will spawn at the position specified above when the mission starts."
                   TextWrapping="Wrap" Foreground="#FF888888" FontStyle="Italic"/>
    </StackPanel>
</UserControl>
