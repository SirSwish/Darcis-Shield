<UserControl x:Class="UrbanChaosMissionEditor.Views.Editors.ShakeCameraEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="Shake Camera" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Border Background="#FF3A3A3D" Padding="10" CornerRadius="4">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" Foreground="#FFAAAAAA">
                        This EventPoint has no type-specific properties.
                    </TextBlock>

                    <Separator Background="#FF555555" Margin="0,10,0,10"/>

                    <TextBlock TextWrapping="Wrap" Foreground="#FF888888" FontSize="11">
                        Its presence in the mission is what matters.
                        Configure only the common fields (especially position / trigger).
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>