<Window x:Class="UrbanChaosMissionEditor.Views.MissionPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mission Properties" 
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#FF2D2D30">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Padding" Value="0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="{Binding HeaderText}" FontSize="18" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Edit the map and lighting file references" FontSize="12" Foreground="#FF888888" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- File References -->
                <GroupBox Header="File References">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Map Filename (editable) -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Map Filename:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding MapFileName, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Just the filename (e.g. gpost3.iam)"/>

                        <!-- Map Full Path (read-only) -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Map Full Path:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding MapName}" 
                                 IsReadOnly="True" 
                                 Foreground="#FF888888"
                                 ToolTip="Full path as stored in UCM file"/>

                        <!-- Light Map Filename (editable) -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Light Map File:"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding LightMapFileName, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Just the filename (e.g. gpost3.lgt)"/>

                        <!-- Light Map Full Path (read-only) -->
                        <Label Grid.Row="3" Grid.Column="0" Content="Light Full Path:"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding LightMapName}" 
                                 IsReadOnly="True" 
                                 Foreground="#FF888888"
                                 ToolTip="Full path as stored in UCM file"/>

                        <!-- Mission Name -->
                        <Label Grid.Row="4" Grid.Column="0" Content="Mission Name:"/>
                        <TextBox Grid.Row="4" Grid.Column="1" 
                                 Text="{Binding MissionName, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Brief Name -->
                        <Label Grid.Row="5" Grid.Column="0" Content="Brief Name:"/>
                        <TextBox Grid.Row="5" Grid.Column="1" 
                                 Text="{Binding BriefName, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </GroupBox>

                <!-- Spawn Rates -->
                <GroupBox Header="Spawn Rates">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Crime Rate:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding CrimeRate, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Grid.Row="0" Grid.Column="2" Content="Civs Rate:"/>
                        <TextBox Grid.Row="0" Grid.Column="3" 
                                 Text="{Binding CivsRate, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Boredom Rate:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding BoredomRate, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Grid.Row="1" Grid.Column="2" Content="Cars Rate:"/>
                        <TextBox Grid.Row="1" Grid.Column="3" 
                                 Text="{Binding CarsRate, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </GroupBox>

                <!-- Info (read-only) -->
                <GroupBox Header="Information">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Version:"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Version}" VerticalAlignment="Center"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Event Points:"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding EventPointCount}" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"
                    Background="#FF0078D4" Foreground="White" BorderThickness="0" Padding="10,5"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click" IsCancel="True"
                    Background="#FF555555" Foreground="White" BorderThickness="0" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
