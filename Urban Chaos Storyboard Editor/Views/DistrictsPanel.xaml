<UserControl x:Class="UrbanChaosStoryboardEditor.Views.DistrictsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:UrbanChaosStoryboardEditor.Services"
             Background="#252526">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8">
            <Button Content="➕ Add" Click="AddDistrict_Click" Padding="8,4" Margin="2"
                    Background="#0078D4" Foreground="White"/>
            <Button Content="✏️ Edit" Click="EditDistrict_Click" Padding="8,4" Margin="2"
                    Background="#5C6BC0" Foreground="White"/>
            <Button Content="🗑️ Delete" Click="DeleteDistrict_Click" Padding="8,4" Margin="2"
                    Background="#E53935" Foreground="White"/>
            <Separator Margin="8,0"/>
            <Button Content="📍 Set Position" Click="SetPosition_Click" Padding="8,4" Margin="2"
                    Background="#43A047" Foreground="White"
                    ToolTip="Click to select position on map"/>
        </StackPanel>

        <DataGrid x:Name="DistrictsGrid"
          Grid.Row="1"
          ItemsSource="{Binding Source={x:Static services:StyDataService.Instance}, Path=Districts}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          SelectionMode="Single"
          Background="#1E1E1E"
          Foreground="White"
          GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="#444"
          RowBackground="#2D2D2D"
          AlternatingRowBackground="#333"
          BorderThickness="0"
          MouseDoubleClick="DistrictsGrid_MouseDoubleClick">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Foreground" Value="Black"/>
                    <!-- optional but recommended so black text is visible -->
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding DistrictId}" Width="40" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding DistrictName}" Width="*"/>
                <DataGridTextColumn Header="X" Binding="{Binding XPos}" Width="50"/>
                <DataGridTextColumn Header="Y" Binding="{Binding YPos}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>